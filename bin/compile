#!/usr/bin/env node

if (!process.argv[2]) {
    process.exit(1);
}

require('fs').readFile(process.argv[2], {encoding: 'utf8'}, function (err, data) {
    try {
        if (err) {
            throw err;
        }
        var bigine = require('../lib/bigine')
            .$import('.core.episode')
            .$import('.util.parser'),
            parser = bigine.util.parser.parse(data);
        (new bigine.core.episode(parser.tags)).$ready().then(function () {
            process.stdout.write(parser.compile(process.argv[3]));
        }).fail(function (error) {
            console.log(error.stack);
        });
    } catch (error) {
        console.log(error.stack);
    }
});
